@using HoanBds.ViewModels;
@using HoanBds.Utilities;
@model ArticleViewModel


<div class="row news-masonry">
    <div class="col-md-8 big-post">
        @foreach (var item in Model.obj_article_list.Skip(0).Take(1))
        {
            string link = @Html.GetStaticUrlNews(item.title, item.id);
            <div class="masonry-item">
                <div class="blog-post">
                    <div class="wt-post-media wt-img-effect zoom-slow">
                        <a href="@link" title="">
                            <img src="@item.image_169" alt="@item.title">
                        </a>
                    </div>
                    <div class="wt-post-info p-t30 text-black">
                        <div class="wt-post-meta ">
                            <ul>
                                <li class="post-date">
                                    <i class="icofont-clock-time" style="color:#919191"></i><strong style="color:#919191">@item.publish_date.ToString("dd/MM/yyyy")</strong>
                                </li>
                            </ul>
                        </div>
                        <div class="">
                            <h3 class="post-title">
                                <a href="@link" title="" style="font-size:25px;">@item.title</a>
                            </h3>
                        </div>
                        <div class="wt-post-text">
                            <p style ="color:#616161">
                                @item.lead
                            </p>
                        </div>
                        <a href="@link" class="site-button black"><span>Đọc thêm</span><em></em></a>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-md-4 small-post">
        @foreach (var item in Model.obj_article_list.Skip(1).Take(2))
        {
            string link = @Html.GetStaticUrlNews(item.title, item.id);
            <div class="masonry-item">
                <div class="blog-post">
                    <div class="wt-post-media wt-img-effect zoom-slow">
                        <a href="@link" title="">
                            <img src="@item.image_169" alt="@item.title">
                        </a>
                    </div>
                    <div class="wt-post-info p-t30 text-black">

                        <div class="wt-post-meta ">
                            <ul>
                                <li class="post-date">
                                    <i class="icofont-clock-time" style="color:#919191"></i><strong style="color:#919191">@item.publish_date.ToString("dd/MM/yyyy")</strong>
                                </li>
                            </ul>
                        </div>
                        <div class="">
                            <h3 class="post-title">
                                <a href="@link" title="" style="font-size:25px;">@item.title</a>
                            </h3>
                        </div>

                        <div class="wt-post-text">
                            <p>
                                @item.lead
                            </p>
                        </div>
                        <a href="@link" class="site-button black"><span>Đọc thêm</span><em></em></a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

