@using HoanBds.ViewModels;
@using HoanBds.Utilities;
@model ArticleViewModel
@{
    int d = 0;
    int category_id = Model.category_id;
}

<div class="list-news-top list-news">
    <div class="row">
        <div class="col-md-8">
            @foreach (var item in Model.obj_article_list.Skip(0).Take(1))
            {
                string folder_name = item.list_category_name.Split(",").First();
                int folder_id = Convert.ToInt32(item.list_category_id.Split(",").First());
                string link_folder = @Html.GetStaticUrlCategory(folder_name, folder_id);
                string link = @Html.GetStaticUrlNews(item.title, item.id);
                <div class="top-news">
                    <div class="item-news">
                        <div class="box-news">
                            <div class="thumb-art">
                                <div class="thumb thumb-news">
                                    <a href="@link"><img src="@item.image_169" alt="@item.title" /> </a>
                                </div>
                            </div>
                            <div class="right-content">
                                <div class="flex-cat">
                                    <span class="time">
                                        <i class="icon icon-time"></i>
                                        @item.publish_date.ToString("dd/MM/yyyy")
                                    </span>
                                    @if (category_id <= 0)
                                    {
                                        <a href="@link_folder" class="cat-tag">@folder_name</a>
                                    }
                                </div>
                                <h2 class="title-news">
                                    <a href="@link">@item.title</a>
                                </h2>
                                <p class="description">
                                    @item.lead
                                </p>
                                <a href="@link" class="xemthem">Đọc tiếp</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="col-md-4">
            <div class="next-news">
                @foreach (var item in Model.obj_article_list.Skip(1).Take(2))
                {
                    string folder_name = item.list_category_name.Split(",").First();
                    int folder_id = Convert.ToInt32(item.list_category_id.Split(",").First());
                    string link_folder = @Html.GetStaticUrlCategory(folder_name, folder_id);
                    string link = @Html.GetStaticUrlNews(item.title, item.id);
                    <div class="item-news">
                        <div class="box-news">
                            <div class="thumb-art">
                                <div class="thumb thumb-news">
                                    <a href="@link"><img src="@item.image_169" alt="@item.title" /> </a>
                                </div>
                            </div>
                            <div class="right-content">
                                <div class="flex-cat">
                                    <span class="time">
                                        <i class="icon icon-time"></i>
                                        @item.publish_date.ToString("dd/MM/yyyy")
                                    </span>
                                    @if (category_id <= 0)
                                    {
                                        <a href="@link_folder" class="cat-tag">@folder_name</a>
                                    }
                                </div>
                                <h2 class="title-news">
                                    <a href="@link">@item.title</a>
                                </h2>
                                <p class="description">
                                    @item.lead
                                </p>
                                <a href="@link" class="xemthem">Đọc tiếp</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>


</div>
<div class="list-news">
    @foreach (var item in Model.obj_article_list.Skip(3).Take(10))
    {
        string folder_name = item.list_category_name.Split(",").First();
        int folder_id = Convert.ToInt32(item.list_category_id.Split(",").First());
        string link_folder = @Html.GetStaticUrlCategory(folder_name, folder_id);
        string link = @Html.GetStaticUrlNews(item.title, item.id);
        <div class="item-news">
            <div class="box-news">
                <div class="thumb-art">
                    <div class="thumb thumb-news">
                        <a href="@link"><img src="@item.image_169" alt="@item.title" /> </a>
                    </div>
                </div>
                <div class="right-content">
                    <div class="flex-cat">
                        <span class="time">
                            <i class="icon icon-time"></i>
                            @item.publish_date.ToString("dd/MM/yyyy")
                        </span>
                        @if (category_id <= 0)
                        {
                            <a href="@link_folder" class="cat-tag">@folder_name</a>
                        }
                    </div>
                    <h2 class="title-news">
                        <a href="@link">@item.title</a>
                    </h2>
                    <p class="description">
                        @item.lead
                    </p>
                    <a href="@link" class="xemthem">Đọc tiếp</a>
                </div>
            </div>
        </div>

        if (d == 3)
        {
            <div class="banner-ads-full">
                <a href="/">
                    <img src="~/images/banner3.jpg" alt="HoanBds" />
                </a>
            </div>
        }
        d += 1;
    }
</div>

