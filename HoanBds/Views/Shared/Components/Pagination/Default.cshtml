@using HoanBds.ViewModels.Paginated;
@model PaginationNewsViewModel

<div class="wrap-paging">
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li class="page previous">
                <a href="@Url.Action("Index", new { page = Model.CurrentPage - 1 })">
                    <i class="icon icon-page-previous"></i>
                </a>
            </li>
        }

        @if (Model.CurrentPage > 3)
        {
            <li class="page">
                <a href="@Url.Action("Index", new { page = 1 })">1</a>
            </li>
            <li class="page"><span>...</span></li>
        }

        @for (int i = Model.CurrentPage - 2; i <= Model.CurrentPage + 2; i++)
        {
            if (i > 0 && i <= Model.TotalPages)
            {
                if (i == Model.CurrentPage)
                {
                    <li class="page active">
                        <a href="#">@i</a>
                    </li>
                }
                else
                {
                    <li class="page">
                        <a href="@Url.Action("Index", new { page = i })">@i</a>
                    </li>
                }
            }
        }

        @if (Model.CurrentPage < Model.TotalPages - 2)
        {
            <li class="page"><span>...</span></li>
            <li class="page">
                <a href="@Url.Action("Index", new { page = Model.TotalPages })">@Model.TotalPages</a>
            </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page next">
                <a href="@Url.Action("Index", new { page = Model.CurrentPage + 1 })">
                    <i class="icon icon-page-next"></i>
                </a>
            </li>
        }
    </ul>
</div>
